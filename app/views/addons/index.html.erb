<%= render partial: "shared/heading", locals: { title: 'Add-ons (optional)', description: "Make the most of your visit." } %>

<div class="flex items-center justify-between sm:py-16 py-8 sm:px-0 px-4 max-w-2xl mx-auto">
  <%= form_for('booking_addons', url: addons_path, method: 'post', class: 'w-full') do |f| %>
    <div class="flex flex-col gap-2">
      <% @addons.each do |addon| %>
        <label for="addon-<%= addon.id %>" class="inline-flex items-start gap-8 w-full p-5 text-gray-900 bg-white has-[:checked]:bg-primary-50 has-[:checked]:border-primary-500 has-[:disabled]:bg-gray-100 has-[:disabled]:cursor-not-allowed has-[:disabled]:opacity-50 border border-gray-200 rounded-lg cursor-pointer peer-checked:border-primary-500 peer-checked:bg-primary-50 hover:text-gray-900 hover:bg-gray-100">
          <input type="checkbox" id="addon-<%= addon.id %>" name="addons[<%= addon.id %>]" value="true"  class="size-5 rounded peer disabled:cursor-not-allowed text-primary-800 focus:ring-primary-500 rounded-full" />
          <div class="flex sm:flex-row flex-col justify-between w-full">
            <div class="sm:w-3/4 w-full">
              <div class="w-full font-heading text-2xl font-semibold text-gray-900 mb-3"><%= addon.title %></div>
              <div class="w-full text-xs text-gray-500"><%== addon.description %></div>
            </div>
            <div class="sm:w-1/4 w-full text-gray-900 text-right"><%= number_to_currency(addon.price) %></div>
          </div>
        </label>
      <% end %>

      <div class="mt-6 flex gap-2 justify-between">
        <%= link_to 'Restart', book_path, class: 'inline-flex px-10 py-4 mb-10 items-center justify-center text-lg font-medium bg-transparent text-gray-900 hover:bg-gray-200 rounded-full transition ease-in-out duration-200 font-heading' %>
        <input type="submit" class="cursor-pointer inline-flex px-10 py-4 mb-10 items-center justify-center text-lg font-medium bg-gray-900 text-gray-100 hover:bg-gray-100 border border-gray-900 hover:text-gray-900 rounded-full transition ease-in-out duration-200 font-heading" value="Checkout">

      </div>
    </div>
  <% end %>
</div>
