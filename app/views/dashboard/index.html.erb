<%= render partial: "shared/heading", locals: { title: 'Reservations', description: 'Manage your bookings.' } %>

<div class="max-w-2xl mx-auto mt-14">
  <h1 class="text-2xl font-medium mb-2">Upcoming</h1>

  <% @upcoming_bookings.each do |booking| %>
    <%= render "reservation", booking: booking %>
  <% end %>

  <% if @past_bookings.present? %>
    <h1 class="text-2xl font-medium mb-2">Past</h1>

    <% @past_bookings.each do |booking| %>
      <%= render "reservation", booking: booking, past: true %>
    <% end %>
  <% end %>
</div>
