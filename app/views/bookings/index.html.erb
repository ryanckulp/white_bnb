<%= turbo_frame_tag 'calendar' do %>
  <%= month_calendar(events: @bookings, attribute: :start_date, end_attribute: :end_date, partial: 'simple_calendar/calendar') do |date, bookings| %>
    <%= date %>

    <% bookings.each do |booking| %>
      <div>
        <%= 'Reserved' %>
      </div>
    <% end %>
  <% end %>
<% end %>

<div class="text-right mb-2">
  <p>Start Date: <span id="start_date"></span></p>
  <p>End Date: <span id="end_date"></span></p>
  <p>Total: <span id="price_calculation"></span></p>
</div>

<div class="text-center">
  <%= link_to 'Book Now', '#', class: 'bg-blue-500 px-4 py-2 text-white text-lg rounded-md' %>
</div>
